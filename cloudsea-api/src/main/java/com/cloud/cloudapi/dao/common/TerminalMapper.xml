<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloud.cloudapi.dao.common.TerminalMapper">

	<resultMap id="BaseResultMap" type="com.cloud.cloudapi.pojo.openstackapi.forgui.Terminal">
       	<id column="id" property="id" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="verified" property="verified" jdbcType="BOOLEAN" />
    </resultMap>
    
    <sql id="all_fields">
        id, type, content, verified, notification_list_id
	</sql>
	
	<!--basic super mapper -->
    
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
     	SELECT <include refid="all_fields" />
		FROM terminals
		WHERE id = #{id}
    </select>
    
    <insert id="insertSelective" parameterType="com.cloud.cloudapi.pojo.openstackapi.forgui.Terminal">
		INSERT INTO terminals
		<trim prefix="(" suffix=")" suffixOverrides=",">
			id,
			<if test="type != null"> type, </if>
			<if test="content != null"> content, </if>
			<if test="verified != null"> verified, </if>
			<if test="notificationListId != null"> notification_list_id </if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			UUID(),
			<if test="type != null"> #{type}, </if>
			<if test="content != null"> #{content}, </if>
			<if test="verified != null"> #{verified}, </if>
			<if test="notificationListId != null"> #{notificationListId} </if>
		</trim>
	</insert>
	
	<update id="updateByPrimaryKeySelective" parameterType="com.cloud.cloudapi.pojo.openstackapi.forgui.Terminal">
		UPDATE terminals
		<set>
			<if test="type != null">type=#{type},</if>
			<if test="content != null">content=#{content},</if>
			<if test="verified != null">verified=#{verified} </if>
		</set>
		WHERE id=#{id}
    </update>
    
    <delete id= "deleteByPrimaryKey" parameterType="java.lang.String">
       DELETE FROM terminals WHERE id = #{id}
	</delete>
	
	<!-- self mapper -->
	
	<delete id= "deleteByNotificationListId" parameterType="java.lang.String">
       DELETE FROM terminals WHERE notification_list_id = #{notification_list_id}
	</delete>

</mapper>